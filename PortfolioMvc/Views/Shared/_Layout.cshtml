<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Styles/style.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

</head>
<body>
    <header class="header" id="main-header">

        @*<a href="Home" class="logo">Jonas.</a>*@
        <a asp-controller="Projects" asp-action="Index" class="logo">Jonas.</a>

        <div class="bx bx-menu" id="menu-icon"></div>

        <nav class="navbar">
                <a asp-controller="Projects" asp-action="Index">Home</a>
                <a asp-controller="Projects" asp-action="About">About</a>
                <a href="#">Education</a>
                <a href="#">Skills</a>
                <a href="#">Projects</a>
                <a asp-controller="Projects" asp-action="Contact">Contact</a>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <script src="~/js/JavaScript.js"></script>
</body>
</html>
